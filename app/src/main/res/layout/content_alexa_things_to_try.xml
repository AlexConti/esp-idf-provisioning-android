<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.espressif.ui.AlexaActivity"
    tools:showIn="@layout/activity_alexa">

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_sign_out" />

    <ImageView
        android:id="@+id/iv_alexa_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sign_out"
        android:contentDescription="TODO"
        android:src="@drawable/ic_alexa_logo_vertical_with_text"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_examples_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_alexa_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:layout_marginBottom="90px"
        android:text="@string/alexa_examples"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="52px"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_example_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alexa_examples_message"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/alexa_example_1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_example_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alexa_example_1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/alexa_example_2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_example_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alexa_example_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/alexa_example_3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_example_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alexa_example_3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/alexa_example_4"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/alexa_example_4"
        android:visibility="gone" />

    <com.espressif.ui.AvsEmberLightText
        android:id="@+id/alexa_app_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/alexa_app_link_msg"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

</RelativeLayout>
